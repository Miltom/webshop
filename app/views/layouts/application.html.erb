<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>Mili's Online Store</title>
  <%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<!-- END:head -->
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("muster_simple_new.png") %>
    <%= @page_title || "Mili's Webshop" %>
  </div>
  <div id="columns">
    <div id="side">
<!-- START_HIGHLIGHT -->
      <div id="cart">

<!-- START_HIGHLIGHT -->
      <!-- START:hidden_div -->
        <% if @cart %>
          <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
            <%= render @cart %>
          <% end %>
        <% end %>
      </div>
    <!-- END:hidden_div -->

<!-- END_HIGHLIGHT -->
<p></br></p>
<!-- END_HIGHLIGHT -->
      <ul>
        <li><a href="..">Home</a></li>
        <li><a href="/products">Products</a></li>
        <!-- <li><a href="/faq">Questions</a></li>
        <li><a href="/news">News</a></li>
        <li><a href="/contact">Contact</a></li>-->
      </ul>
      
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
